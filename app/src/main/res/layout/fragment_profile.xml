<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:fresco="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <com.facebook.drawee.view.SimpleDraweeView
                android:id="@+id/iv_user_profile"
                android:layout_width="130dp"
                android:layout_height="130dp"
                fresco:placeholderImage="@drawable/user_placeholder" />

            <TextView
                android:id="@+id/tv_rating_profile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/tv_user_name_profile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <ViewSwitcher
                android:id="@+id/vs_phone_profile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="No phone added"/>

                 <android.support.v7.widget.RecyclerView
                    android:id="@+id/rv_phone_profile"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            </ViewSwitcher>

            <ViewSwitcher
                android:id="@+id/vs_address_profile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="No address added"/>

                 <android.support.v7.widget.RecyclerView
                    android:id="@+id/rv_address_profile"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

            </ViewSwitcher>

        </LinearLayout>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/rv_pet_profile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <Button
            android:id="@+id/btn_log_out_profile"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="SIGN OUT"/>

    </LinearLayout>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fab_profile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"/>

    </RelativeLayout>

</layout>